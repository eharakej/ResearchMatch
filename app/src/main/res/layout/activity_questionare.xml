<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionareActivity">

    <TextView
        android:id="@+id/textViewIntroQuestion"
        android:layout_width="399dp"
        android:layout_height="61dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="330dp"
        android:text="Please fill out this short questionare so that we can better match you with available research positions tailored specifically to you"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="388dp"
        android:layout_height="62dp"
        android:ems="10"
        android:hint="In what department do you prefer to conduct research?"
        android:inputType="textPersonName"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="99dp" />
</androidx.constraintlayout.widget.ConstraintLayout>